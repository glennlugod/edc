@page "/"

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container mt-5">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-4">Welcome, @context.User.Identity!.Name!</h1>
                    <p class="lead">You are now logged in to the Electronic Data Capture (EDC) Application.</p>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="container mt-5">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-center">Please Log In</h2>
                    <p class="text-center">You need to log in to access the Electronic Data Capture (EDC) Application.</p>
                    <div class="text-center">
                        <a href="MicrosoftIdentity/Account/SignIn" class="btn btn-primary">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>
